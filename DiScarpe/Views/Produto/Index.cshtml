@model IEnumerable<DiScarpe.Models.Produto>

<h2>Produtos</h2>

@if (Model.Count() == 0)
{
    <p class="card-text">Nenhum produto encontrado.</p>
}
else
{
    foreach (var item in Model)
    {
        <div class="card-group">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="@String.Format("/Imagens/{0}/{1}/{2}/{3}/{4}.jpg", item.Categoria.Descricao, item.Marca.Descricao, item.Estilo.Descricao, item.Cor.Descricao, item.IdProduto)" alt="Card image cap" />
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Marca.Descricao)</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Nome)</p>
                    <button class="btn btn-primary"><i class="fas fa-shopping-cart"></i></button>
                    <button type="button" class="btn btn-light"><i class="fas fa-heart"></i></button>
                </div>
            </div>
        </div>

    }

}



