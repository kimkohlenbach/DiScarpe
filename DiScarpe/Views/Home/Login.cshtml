@model DiScarpe.Models.Usuario

<p class="paginaTitulo">Login</p>
<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("Acesso", "Home", FormMethod.Post))
        {
            <div class="formulario">

                <div class="form-group">
                    <p class="texto">
                        @Html.LabelFor(model => model.Email)
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    </p>
                    <p class="alerta"> @Html.ValidationMessageFor(model => model.Email)</p>

                </div>
                <div class="form-group">
                    <p class="texto">
                        @Html.LabelFor(model => model.Senha)
                        @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control" } })
                    </p>
                    <p class="alerta"> @Html.ValidationMessageFor(model => model.Senha)</p>

                </div>
                <p class="alerta">@Html.DisplayFor(model => model.LoginErrorMessage)</p>

                <input type="submit" name="name" value="Entrar" class="btn btn-primary" />
            </div>
        }
    </div>
    <div class="col-md-6">
        <p class="texto">
            Não possui uma conta? Cadastre-se agora!
        </p>
            <button class="btn btn-success">@Html.ActionLink("Criar cadastro", "Registrar", "Home", new { @class = "botoes" })</button>
        
    </div>
</div>