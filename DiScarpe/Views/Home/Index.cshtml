@model IEnumerable<DiScarpe.Models.Produto>

<p class="paginaTitulo">Calçados</p>
@if (Model.Count() == 0)
{
    <p class="card-text">Nenhum produto encontrado.</p>
}
else
{
    <div class="card-group">
        @foreach (var item in Model)
        {
            <div class="card">
                <div class="card-image">
                    <img class="card-img-top" src="@String.Format("/Imagens/{0}/{1}/{2}/{3}/{4}.jpg", item.Categoria.Descricao, item.Marca.Descricao, item.Estilo.Descricao, item.Cor.Descricao, item.IdProduto)" alt="Card image cap" />
                </div>
                <div class="card-body">
                    <h5 class="card-title">@Html.ActionLink(item.Nome, "Detalhes", "Produto", new { @produtoId = item.IdProduto, }, null)</h5>
                    <p class="valorProduto">R$ @Convert.ToDecimal(item.Preco)</p>
                    <button class="btn btn-success" id="btnCard">@Html.ActionLink("Comprar", "Detalhes", "Produto", new { @produtoId = item.IdProduto, })</button>
                </div>
            </div>
        }
    </div>
}



